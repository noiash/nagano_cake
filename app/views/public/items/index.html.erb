<div class="container">
  <div class="row">
    <div class="col-md-12">
    <p class="h4 mt-3 mb-5 text-center">商品一覧</p>
    </div>
  </div>

  <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-5">
      <div class="col-md-5">

        <p>
        <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, :fill, 200, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <% end %>
        </p>

        <p><%= item.name %></p>
        <p>¥<%= item.price %></p>

      </div>
    </div>
    <% end %>
  </div>
</div>