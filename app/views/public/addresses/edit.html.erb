<div class="container">
  <div class="d-flex align-items-center">
  <p class="p-3 mb-10 bg-info text-white">配送先編集</p>
  </div>

    <%= form_with model: @address, url: address_path(@address), local: true do |f| %>
    <div class="row">
    <div class="col-md-3">
　    <p>郵便番号(ハイフンなし)</p>
　    <p>住所</p>
　    <p>宛名</p>
　  </div>
　  <div class="col-md-5">
　    <p><%= f.text_field :postal_code %></p>
      <p><%= f.text_field :address %></p>
      <p><%= f.text_field :name %></p>
      <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
　  </div>

      <% end %>

    </div>
</div>
