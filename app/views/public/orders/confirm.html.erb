<div class="container">
  <div class="row">
　　<div class="col-md-10 offset-md-1">
  　　<div class="d-flex align-items-center">
  　　<p class="p-3 mb-10 bg-info text-white">注文情報確認</p>
  　　</div>

  　<table>
  　　<thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <% @total +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
        </tr>
      <% end %>
      </tbody>
    </table>

      <% @orders, @total.each do |order, total| %>
    <table>
      <tr><th>送料</th><td><%= order.postage %> </td></tr>
      <tr><th>商品合計</th><td><%= order.cart_item.total %></td></tr>
      <tr><th>請求金額</th><td><%= order.billing_amount %></td>
      <% @billing += (order.postage).floor + order.cart_item.total %>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>