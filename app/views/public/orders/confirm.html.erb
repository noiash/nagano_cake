<div class="container">
  <div class="row">
　　<div class="col-md-10 offset-md-1">
  　　<div class="d-flex align-items-center">
  　　<p class="p-3 mb-10 bg-info text-white">注文情報確認</p>
  　　</div>

  　<table>
  　　<thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <% @total +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
        </tr>
      <% end %>
      </tbody>
    </table>

    <table>
      <tr><th>送料</th><td><%= @postage %> </td></tr>
      <tr><th>商品合計</th><td><%= @total %></td></tr>
      <% @billing_amount += @total + @postage %>
      <tr><th>請求金額</th><td><%= @billing_amount %></td>
      </tr>
    </table>

    <div class="">
      <p>支払い方法<%= @order.payment_method %></p>
    </div>

    <div class="">
      <%= form_with url: orders_complete_path, local: true do |f| %>
      <%= f.hidden_field :address_id, value: @ %>
      <p>お届け先<%= @order.address %></p>
      <% end %>
    </div>
    </div>
  </div>
</div>