<div class="container">
  <div class="row">
　　<div class="col-md-10 offset-md-1">
  　　<div class="d-flex align-items-center">
  　　<p class="p-3 mb-10 bg-info text-white">注文情報入力</p>
  　　</div>

  　<%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
      <%= f.label :payment_method, "支払い方法" %>
      <br>
  　　  <%= f.radio_button :payment_method, true %>
      <%= f.label :payment_method, 'クレジットカード' %>
      <br>
      <%= f.radio_button :payment_method, false %>
      <%= f.label :payment_method, '銀行振込' %>
      <br>

      <%= f.label :address, "お届け先" %>
      <br>

      <%= f.radio_button :select_method, value: 1 %>
      <%= f.label :order_address, 'ご自身の住所' %>
      <%= current_customer.address %>

      <%= f.radio_button :select_method, value: 2 %>
      <%= f.label :order_address, '登録済住所から選択' %>
      <%= f.select :order_address(, :id, :address) %>

　　　<br>
      <%= f.radio_button :select_method, value: 3 %>
      <%= f.label :order_address, '新しいお届け先' %>
      <br>

      <%= f.label :postal_code, "郵便番号" %>
      <%= f.text_field :postal_code %>
      <br>

      <%= f.label :order_address, "住所" %>
      <%= f.text_field :order_address %>
      <br>
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %>

  　<% end %>

  　<%= link_to "確認画面へ進む", orders_confirm_path, class: 'btn btn-primary' %>
  　</div>
  </div>
</div>