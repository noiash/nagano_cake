<div class="container">
  <div class="row">
　　<div class="col-md-10 offset-md-1">
  　　<div class="d-flex align-items-center">
  　　<p class="p-3 mb-10 bg-info text-white">注文履歴詳細</p>
  　　</div>

  　<div>
　　　<p>注文情報</p>
      <table>
          <tr><th>注文日</th><td><%= @order.created_at %></td></tr>
          <tr><th>配送先</th><td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td></tr>
          <tr><th>支払方法</th><td><%= @order.payment_method %></td></tr>
          <tr><th>ステータス</th><td><%= @order.status %></td></tr>
      </table>
  　</div>

  　<div>
  　　<p>請求情報</p>
      <table>
          <tr><th>商品合計</th><td><%= @tatal %></td></tr>
          <tr><th>配送料</th><td><%= @order.postage %></td></tr>
          <tr><th>ご請求金額</th><td><%= @order.billing_amount %></td></tr>
      </table>
  　</div>

  　<div>
      <p>注文内容</p>
      <table>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
           <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
           <%= f.hidden_field :item_id, value: @item %>
          <tr>
            <% @order_details.each do |order_detail| %>
            <td>
              <%= order_detail.item.name %></td>

            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detail.amount %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
  　</div>
  　</div>
  </div>
</div>