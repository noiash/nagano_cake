<span class="bg-light text-dark">新規会員登録</span>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <p>名前</p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <p>フリガナ</p>
    <%= f.label :last_name_kana %>
    <%= f.text_field :last_name_kana %>
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <p>郵便番号</p>
    <%= f.label :postal_code %>
    <%= f.postal_code_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <p>住所</p>
    <%= f.label :address %>
    <%= f.text_field :address, size: "50" %>
  </div>

  <div class="field">
    <p>電話番号</p>
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>

<span class="bg-light text-dark">既に登録済みの方</span></br>
<%= render "public/customers/shared/links" %>
