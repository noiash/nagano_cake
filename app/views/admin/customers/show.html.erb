<div class="col-md-10 offset-md-1">
  <div class="d-flex align-items-center">
  <p class="p-3 mb-10 bg-info text-white"><%= @customer.full_name %>さんの会員詳細</p>
  </div>

<table class="table table-hover table-inverse">
  <tbody class="table-senondary">
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
  　<tr>
  　   <td>氏名</td>
  　   <td><%= @customer.full_name %></td>
  　</tr>
  　   <td>フリガナ</td>
  　   <td><%= @customer.full_name_kana %></td>
  　<tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
  　</tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if @customer.is_active == true %>
  　　　　　有効
　　　　<% else %>
  　　　　退会
　　　　<% end %>
      </td>
    </tr>
  </tbody>
</table>

<div class="text-center">
<%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-success' %>
<%= link_to "注文履歴一覧を見る", edit_admin_order_path(@customer), class: 'btn btn-primary' %>
</div>
