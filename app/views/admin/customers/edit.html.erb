<div class="col-md-10 offset-md-1">
  <div class="d-flex align-items-center">
  <p class="p-3 mb-10 bg-info text-white"><%= @customer.full_name %>さんの会員詳細</p>
  </div>

<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
<p>会員ID<%= @customer.id %></p>
<div class="field">
  <p>氏名
    <%= f.text_field :first_name, autofocus: true, required: true %>
    <%= f.text_field :last_name, autofocus: true, required: true %>
  </p>
</div>

<div class="field">
  <p>フリガナ
    <%= f.text_field :first_name_kana, autofocus: true, required: true %>
    <%= f.text_field :last_name_kana, autofocus: true, required: true %>
  </p>
</div>

<div class="field">
<p>郵便番号
<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
</p>
</div>

<div class="field">
<p>住所
<%= f.text_field :address, size: "50" %>
</p>
</div>

<div class="field">
<p>電話番号
<%= f.text_field :telephone_number %>
</p>
</div>

<div class="field">
<p>メールアドレス
<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</p>
</div>
<p>会員ステータス
<%= f.radio_button :is_active, true %>
<%= f.label :is_active, '有効' %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, '退会' %>
</p>

<%= f.submit "変更を保存", class: 'btn btn-success' %>

<% end %>




