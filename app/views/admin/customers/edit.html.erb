<div class="container">
  <div class="d-flex align-items-center">
  <p class="p-3 mb-10 bg-info text-white"><%= @customer.full_name %>さんの会員編集</p>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
  <div class="row">
    <!--<div class="col-md-12">-->
      <!--<div class="d-flex align-items-center">-->

      <!--</div>-->
    <!--</div>-->


        <div class="col-md-3">
        <p>会員ID</p>
        <p>氏名</p>
        <p>フリガナ</p>
        <p>郵便番号</p>
        <p>住所</p>
        <p>電話番号</p>
        <p>メールアドレス</p>
        <p>会員ステータス</p>
        </div>
        <div class="col-md-9">
          <p><%= @customer.id %></p>
          <p>
          <%= f.text_field :first_name, autofocus: true, required: true %>
          <%= f.text_field :last_name, autofocus: true, required: true %>
          </p>
          <p>
          <%= f.text_field :first_name_kana, autofocus: true, required: true %>
          <%= f.text_field :last_name_kana, autofocus: true, required: true %>
        　</p>
        　<p>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </p>
          <p>
          <%= f.text_field :address, size: "50" %>
          </p>
        　<p>
          <%= f.text_field :telephone_number %>
          </p>
          <p>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </p>
          <p>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '有効' %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '退会' %>
          </p>

        </div>
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
      </div>
      <% end %>

</div>



