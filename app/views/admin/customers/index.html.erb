<span class="bg-light text-dark">会員一覧</span>

<div class="col-md-4 offset-md-1">
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer) do %>
        <%= customer.full_name %>
        <% end %>
        </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active == true %>
          有効
        <% else %>
          退会
        <% end %>
      </td>
    </tr>

  <% end %>
  </tbody>
</table>
</div>