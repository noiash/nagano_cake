<h1>ジャンル一覧・追加</h1>

<h4>ジャンル名</h4>
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>

　<%= f.text_field :name %>
　<%= f.submit "新規登録", class: 'btn btn-success' %>

<% end %>


<h2>ジャンル</h2>

<% @genres.each do |genre| %>
<div>
  <p><%= genre.name %></p>
  <%= link_to "編集する", edit_admin_genre_path, class: 'btn btn-success' %>
</div>
<% end %>