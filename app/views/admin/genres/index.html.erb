<h5 class="bg-light text-dark w-25">ジャンル一覧・追加</h5>

<div class="container">
  <div class="row">
    <div class="col">
      <p>ジャンル名</p>
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
　     <%= f.text_field :name %>
　     <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-4 offset-md-1">
<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
    </tr>

  <% end %>
  </tbody>
</table>
</div>