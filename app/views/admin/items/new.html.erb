<div class="col-md-10 offset-md-1">
  <div class="d-flex align-items-center">
  <p class="p-3 mb-10 bg-info text-white">商品新規登録</p>
  </div>

  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
    <form>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label col-form-label-sm">商品画像</label>
      <div class="form-inline">
        <div class="col-sm-10">
        <%= f.attachment_field :image, class: 'form-control-sm' %>
        </div>
      </div>
    </div>

   <div class="form-group row">
     <label class="col-sm-2 col-form-label col-form-label-sm">商品名</label>
       <div class="form-inline">
         <div class="col-sm-10">
         <%= f.text_field :name, class: 'form-control-sm' %>
         </div>
       </div>
   </div>

   <div class="form-group row">
     <label class="col-sm-2 col-form-label col-form-label-sm">商品説明</label>
       <div class="form-inline">
         <div class="col-sm-10">
         <%= f.text_area :introduction, class: 'form-control-sm' %>
         </div>
       </div>
     </div>

     <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm">ジャンル</label>
          <div class="form-inline">
            <div class="col-sm-10">
            <%= f.select :genre_id, [['ケーキ', 1], ['プリン', 2], ['焼き菓子',3]], { include_blank: '選択してください'}, { id: "item_genre", class: 'form-control-sm' } %>
            </div>
          </div>
     </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm">税抜価格</label>
          <div class="form-inline">
            <div class="col-sm-10">
            <%= f.text_field :price, id: "item_price", class: 'form-control-sm' %>円
            </div>
          </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3">販売ステータス</label>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中' %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中' %>

      </div>

    <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
    </form>
  </div>
</div>