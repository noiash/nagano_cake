<div class="col-md-10 offset-md-1">
  <div class="d-flex align-items-center">
  <p class="p-3 mb-10 bg-info text-white">商品一覧</p>
  </div>
  <div class="text-right">
  <%= link_to "+", new_admin_item_path, class: 'btn btn-primary rounded-circle p-0', style: 'width:2rem;height:2rem;' %>
  </div>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item) do %>
        <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>

      <td>
        <% if item.is_active == true %>
          <p class="text-success">販売中</p>
        <% else %>
          <p class="text-secondary">販売停止中</p>
        <% end %>
      </td>
    </tr>

  <% end %>
  </tbody>
</table>
</div>