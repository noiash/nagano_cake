<span class="bg-light text-dark">注文履歴詳細</span>


<div class="field">
  <p>
    購入者
    <%= @order.customer.name %>
  </p>
</div>

<div class="field">
  <p>
    注文日
    <%= @order.created_at %>
  </p>
</div>

<div class="field">
  <p>
  配送先
  <%= @order.postal_code, address, name %>
  </p>
</div>

<div class="field">
  <p>
    支払い方法
    <%= @order.payment_method %>
  </p>
</div>

<%= form_with model: @order, url: admin_order_path(@order), local: true do |f| %>
<div class="field">
  <p>
    注文ステータス
    <%= f.select :status, [['入金待ち', 0], ['入金確認', 1], ['制作中', 2], ['発送準備中', 3], ['発送済み', 4]], { include_blank: '入金待ち'}, { class: 'form-control' } %>
    <%= link_to "更新", admin_order_path(@order), class: 'btn btn-success' %>
  </p>
</div>
<% end %>



<div class="col-md-4 offset-md-1">
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order.price * amount %></td>
  <% end %>
  <%= form_with model: @order_detail, url: admin_order_detail_path(@order_detail), local: true do |f| %>
      <td>制作ステータス
      <%= f.select :making_status, [['制作不可', 0], ['制作待ち', 1], ['制作中', 2], ['制作完了', 3]], { include_blank: '制作不可'}, { class: 'form-control' } %>
      <%= link_to "更新", admin_order_detail_path(@order_detail), class: 'btn btn-success' %>
      </td>
  <% end %>

  </tbody>
</table>
</div>


<div class="total">
  <p>商品合計</p>
  <p>送料</p>
  <p>請求金額合計</p>
</div>